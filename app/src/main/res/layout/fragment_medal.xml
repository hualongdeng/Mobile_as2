<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.medal.MedalFragment"
    android:background="@drawable/home_backgroud_part1">

    <Button
        android:id="@+id/medal_type2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="136dp"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/medal_icon_grey"
        android:enabled="true"
        android:text="@string/action_medal_type2_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        tools:text="Level2" />

    <Button
        android:id="@+id/medal_type1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="136dp"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/medal_icon_grey"
        android:enabled="true"
        android:text="@string/action_medal_type1_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        tools:text="Level2" />

    <Button
        android:id="@+id/medal_daily"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:enabled="true"
        android:background="@drawable/medal_daily"
        app:layout_constraintEnd_toStartOf="@+id/medal_weekly"
        app:layout_constraintTop_toBottomOf="@id/textView"/>

    <Button
        android:id="@+id/medal_type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="292dp"
        android:drawableTop="@drawable/medal_icon_grey"
        android:enabled="true"
        android:text="@string/action_medal_type2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        tools:text="Level1" />

    <Button
        android:id="@+id/medal_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="292dp"
        android:drawableTop="@drawable/medal_icon_shine"
        android:enabled="true"
        android:text="@string/action_medal_type1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        tools:text="Level1" />

    <Button
        android:id="@+id/medal_weekly"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:background="@drawable/medal_weekly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/medal_monthly"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:enabled="true"
        android:background="@drawable/medal_monthly"
        app:layout_constraintStart_toEndOf="@+id/medal_weekly"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/medal_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="193dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="193dp"
        android:text="My Medal"
        android:textColor="#E6D5D6CA"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        android:text="Report"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/medal_daily"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/medal_type2_1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="119dp"
        android:layout_marginBottom="130dp"
        android:text="Total time:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/medal_page_title"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="260dp"
        android:text="Frequency:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
