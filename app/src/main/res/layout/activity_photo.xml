<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/account_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Change Photo"
        android:textColor="#E6D5D6CA"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/account_back2"
        android:layout_width="47dp"
        android:layout_height="41dp"
        android:layout_gravity="start"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/back_button"
        android:enabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/myphoto"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/avatar_icon_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_back2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/myphoto"
        app:layout_constraintTop_toBottomOf="@+id/account_back2"
        app:srcCompat="@drawable/avatar_icon_2" />

    <ImageButton
    android:id="@+id/imageButton3"
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="50dp"
    app:layout_constraintStart_toEndOf="@+id/imageButton2"
    app:layout_constraintTop_toBottomOf="@+id/account_back2"
    app:srcCompat="@drawable/avatar_icon_3" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton3"
        app:layout_constraintTop_toBottomOf="@+id/account_back2"
        app:srcCompat="@drawable/avatar_icon_4" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myphoto"
        app:srcCompat="@drawable/avatar_icon_5" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/myphoto"
        app:srcCompat="@drawable/avatar_icon_6" />

    <ImageButton
    android:id="@+id/imageButton7"
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    app:layout_constraintStart_toEndOf="@+id/imageButton6"
    app:layout_constraintTop_toBottomOf="@+id/myphoto"
    app:srcCompat="@drawable/avatar_icon_7" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton7"
        app:layout_constraintTop_toBottomOf="@+id/myphoto"
        app:srcCompat="@drawable/avatar_icon_8" />
</androidx.constraintlayout.widget.ConstraintLayout>

